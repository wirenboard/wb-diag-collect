[Unit]
Description=diagnostic sender server.
Wants=wb-hwconf-manager.service wb-modules.service
After=wb-hwconf-manager.service wb-modules.service

[Service]
Type=simple
Restart=on-failure
RestartSec=1
User=root
ExecStart=/usr/bin/wb-diag-collect -s diag_archive

[Install]
WantedBy=multi-user.target
